            app:cornerRadius="5dp"
            app:iconTint="@color/white"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button7"
